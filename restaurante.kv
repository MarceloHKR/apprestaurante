# kivy 1.11.1
#id do kv

<Button>:
    font_size: 20
    size_hint: 0.8, 0.1

<Label>:
    color: 1, 1, 1, 1
    font_size: 20
    halign: "center"
    valign: "middle"

<TextInput>:
    font_size: 20
    size_hint: 0.8, 0.1
    multiline: False
    halign: "center"
    valign: "middle"

GerenciadorTelas:
    TelaPrincipal:
    TelaGarcom:
    

<TelaPrincipal>:
    name:'tela_principal'

    FloatLayout:

        size_hint:1, 1

        canvas:
            Color:
                rgba: 1, 0, 0, 0.2
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text:'Olá, seja bem vindo ao nosso super mega melhor de bão de tudo app!'
            size_hint:0.8, 0.3
            text_size: self.size
            pos_hint: {"center_x":0.5, "top": 0.9}

        Button:
            text:'Garçom'
            pos_hint:{"center_x":0.5, "y": 0.01}
            on_press:
                app.root.current = 'tela_garcom'

        Button:
            text:'Cozinha'
            pos_hint:{"center_x":0.5, "y": 0.12}

        Button:
            text:'Caixa'
            pos_hint:{"center_x":0.5, "y": 0.23}





<TelaGarcom>:
    name: 'tela_garcom'

    FloatLayout:
    
        size_hint: 1, 1

        Label:
            text: "Tela do Garçom"
            size_hint: 0.8, 0.15
            text_size: self.size
            pos_hint: {"center_x": 0.5, "top": 0.95}

        TextInput:
            hint_text: "Digite o número da mesa"
            pos_hint: {"center_x": 0.5, "top": 0.75}

        TextInput:
            hint_text: "Digite o pedido"
            size_hint: 0.8, 0.3
            pos_hint: {"center_x": 0.5, "top": 0.6}

        Button:
            text: "Enviar"
            pos_hint: {"center_x": 0.5, "y": 0.12}    

        Button:
            text: "Voltar"
            pos_hint: {"center_x": 0.5, "y": 0.01}
            on_press:
                app.root.current = 'tela_principal'